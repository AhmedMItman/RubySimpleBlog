<p id="notice"><%= notice %></p>

<h1  class="text-center">Posts</h1>

<table  class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user.userName %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%else%>

        <%end%>
          </tr>
    <% end %>
  </tbody>
</table>

<br>

<p class="text-center"><%=link_to 'New Post', new_post_path %></p>
