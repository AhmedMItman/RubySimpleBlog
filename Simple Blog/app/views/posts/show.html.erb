<p id="notice"><%= notice %></p>
<div class="postTitle">
  <p>
    User : <%= @post.user.userName %>
  </p>

  <p>
    Title : <%= @post.title %>
  </p>

  <p>
    Body : <%= @post.body%>
  </p>
</div>


<h2 class="commentTitle">Comments</h2>
<%= render @post.comments %>

<h3>Add a comment : </h3>
<%= render 'comments/form' %>

<p class="text-center">
  <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Back', posts_path %>
</p>

